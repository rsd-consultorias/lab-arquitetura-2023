{
    "rules": {
      "no-unnecessary-class": [true, "allow-empty-class"],
      "no-inferrable-types": true,
      "semicolon": [true, "always"],
      "no-bitwise": false,
      "eofline": true,
      "prefer-const": true,
      "forin": false,
      "max-line-length": [
        true,
        {
          "limit": 180,
          "ignore-pattern": "^import |^export {(.*?)}"
        }
      ]
    }
  }
  